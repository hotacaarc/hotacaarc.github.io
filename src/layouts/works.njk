{# --- Front-Matter ここはレイアウト自身の変数 --- #}
---
title: "{{ title }}"
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{{ title }} – other Works</title>
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/main.css">
</head>
<body class="works-page">

<header>…共通ヘッダー…</header>

<section id="home" class="hero">
  <div class="hero-row">

    <!-- Hero 画像 / 動画 -->
    <div class="hero-img">
      {{ hero | safe }}   {# HTML 文字列をそのまま出力 #}
    </div>

    <!-- テキスト -->
    <div class="hero-content">
      <h1 class="hero-heading hero-heading--small">{{ title }}</h1>
      <span class="hero-heading-subtitle">{{ subtitle }}</span>
      <p class="hero-about">{{ description }}</p>
    </div>
  </div>

  {# ギャラリー部品を読み込み #}
  {% include "gallery.njk" %}
</section>

<footer>…共通フッター…</footer>
<script src="/js/main.js" type="module"></script>
<script src="/js/gallery.js" type="module"></script>
</body>
</html>
